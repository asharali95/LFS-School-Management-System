@model IEnumerable<LFS_School_Management_System.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Data Page</h2>

<button class="btn ">
   @Html.ActionLink("Add new student", "Create")
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Student Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.FirstName)
            @Html.DisplayFor(model => item.MiddleName)
            @Html.DisplayFor(model => item.LastName)
        </td>
        <td>
           @Html.DisplayFor(model => item.FatherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            <button>@Html.ActionLink("Edit", "Edit", new { id = item.StudentID })</button> |
            <button> @Html.ActionLink("Details", "Details", new { id = item.StudentID })</button> | 
            <button> @Html.ActionLink("Delete", "Delete", new { id = item.StudentID })</button>
</td>
    </tr>
}

</table>
